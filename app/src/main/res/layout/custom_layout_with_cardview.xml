<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/challenge_imageview"
            android:layout_width="88dp"
            android:layout_height="85dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/img_jardin"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge name..."
            android:layout_marginStart="105dp"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/challenge_name"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge time..."
            android:layout_marginStart="120dp"
            android:layout_marginTop="60dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:id="@+id/challenge_time"></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>